<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bs_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Time to Schedule?"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:inputType="textAutoComplete" />

    <EditText
        android:id="@+id/bs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bs_header"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Title (Won't appear on all messages)"
        android:inputType="textAutoComplete" />

    <EditText
        android:id="@+id/bs_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:layout_below="@+id/bs_title"
        android:layout_alignLeft="@+id/bs_title"
        android:layout_alignStart="@+id/bs_title"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/bs_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="Schedule it!" />

    <TextView
        android:id="@+id/bs_dateText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="30dp"
        android:text="Date"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/bs_timeText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:text="Time"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/bs_date"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:text="Change Date" />

    <Button
        android:id="@+id/bs_time"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:text="Change Time" />

</RelativeLayout>